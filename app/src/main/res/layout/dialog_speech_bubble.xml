<?xml version="1.0" encoding="utf-8"?>
<com.stadtiq.SpeechBubbleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speech_bubble_view_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="#E0E0E0"> <!-- Neutral tools:background for IDE preview -->

    <LinearLayout
        android:id="@+id/bubble_content_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="250dp">  <!-- Ensures minimum width for content -->

        <TextView
            android:id="@+id/text_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="This is a brief explanation about the value. It might be a bit longer to test wrapping and make sure the bubble expands nicely." />

        <TextView
            android:id="@+id/text_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="@string/learn_more"
            android:contentDescription="@string/learn_more"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?attr/colorPrimary"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</com.stadtiq.SpeechBubbleView>