<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="8dp"> <!-- Reduced bottom padding as buttons will add their own -->

    <!-- RadioGroup to hold language options -->
    <RadioGroup
        android:id="@+id/radio_group_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- RadioButton for English language selection -->
        <RadioButton
            android:id="@+id/radio_button_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/language_english"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="4dp"/> <!-- Added margin between radio buttons -->

        <!-- RadioButton for German language selection -->
        <RadioButton
            android:id="@+id/radio_button_german"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/language_german"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </RadioGroup>

</LinearLayout>