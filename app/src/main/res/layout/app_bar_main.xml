<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">
    <!-- AppBarLayout uses the Activity's theme -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <!-- REMOVED: android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" -->
    <!-- The Toolbar will now also primarily use the Activity's theme. -->
    <!-- Its text and icon colors should be controlled by ?attr/colorOnPrimary -->
    <!-- or by setting app:titleTextColor and app:navigationIconTint, etc., directly if needed. -->

</com.google.android.material.appbar.AppBarLayout>