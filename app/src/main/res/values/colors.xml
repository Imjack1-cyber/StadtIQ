<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Standard Android/Material colors -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- Your App's Green Theme Colors -->
    <color name="colorPrimary">#4CAF50</color>       <!-- Primary green from logo -->
    <color name="colorPrimaryVariant">#388E3C</color>  <!-- Darker green -->
    <color name="colorOnPrimary">#FFFFFF</color>     <!-- White text on primary -->

    <!-- Secondary colors (REQUIRED by some themes - ensure these are NOT commented out) -->
    <color name="colorSecondary">#03DAC6</color>      <!-- Standard Material Teal -->
    <color name="colorSecondaryVariant">#018786</color> <!-- Darker Teal -->
    <color name="colorOnSecondary">#000000</color>    <!-- Black text on secondary -->

    <!-- Other colors like the grey for selected items or container backgrounds -->
    <color name="grey_light">#D3D3D3</color>
    <color name="grey_medium">#B0B0B0</color>
    <color name="grey_container">#EEEEEE</color>

    <!-- Specific grey for the selected toggle button background -->
    <color name="grey_solid">#A9A9A9</color>


    <!-- Redefining the standard Material Design default color for backward compatibility -->
    <color name="design_default_color_primary">@color/colorPrimary</color>

</resources>