<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorControlHighlight" /> <!-- Theme aware press color -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorControlHighlight" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="?attr/colorPrimary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurface" /> <!-- Theme aware default background -->
            <corners android:radius="4dp" />
            <stroke android:width="0.5dp" android:color="#CCCCCC" /> <!-- Subtle border, consider theme attribute -->
        </shape>
    </item>
</selector>